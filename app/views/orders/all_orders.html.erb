<h2 style="font-family:'Lobster',cursive; font-size: 3rem">All Orders</h2>

<% if notice  %>
  <div class="alert alert-danger"><%= notice %></div>
<% end %>
    
<div class="d-flex align-items-center">
    <div class="w-25">
      <%= button_to 'Sort Today',all_orders_path({start:Date.today, end:Date.today+1}), method: :get, class:"btn btn-success" %>
    </div>

    <div class="w-50">
      <div class="w-75 bg-secondary mx-auto py-2 rounded" style=" --bs-bg-opacity: .15;">
        <%= form_with url: "/orders/all_orders",method: :get do |f| %>
          <%= f.label "start" %>
          <%= f.date_field :start, value: @start_date%>
          <span> -- </span>
          <%= f.label "end" %>
          <%= f.date_field :end, value: @end_date%>
          <%= f.submit 'Sort', class:"btn btn-success" %>
        <% end %>  
      </div>  
    </div>

    <div class="w-25">
    </div>        
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Orders</th>
      <th scope="col">Total Price</th>
      <th scope="col">Tax(12%)</th>
      <th scope="col">Print Receipt</th>
      <th scope="col">Time</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>

    <% if @Orders.length == 0%>
      <tbody>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td><h1 class="text-secondary" >No Data</h1></td>
          <td></td>
          <td></td>
        </tr>
      </tbody>

    <% else %>

      <% @Orders.each_with_index do |order,idx|%>   
          <tr>
            <td><%= idx + 1%> </td>
            <td>
            <% order[0].each_with_index do |x,idx|%>
              <% if x.keys[0] != :total_price %>
                <%=x[:product_name] %>
                (&#8369;<%=sprintf('%.2f',x[:price])%> x
                <%=x[:quantity]%>)
                <%= order[0].length != idx+2 ? ',' : '' %>    
              <% end %>
            <% end %>
            </td>
            <td>&#8369;<%= sprintf('%.2f',order[0][order[0].length-1][:total_price])%> </td>
            <td>&#8369;<%= sprintf('%.2f',order[0][order[0].length-1][:tax])%> </td>
            <td><%= link_to 'print_receipt', order_receipt_path({id:order[2], back_to_allorders:"ok"}), class:"btn btn-warning"%> </td>
            <td><%= order[1].strftime("%I:%M%p/%b %d")%></td>
            <td><%= button_to 'delete',delete_order_path({id:order[2], date:order[1]}),method: :delete, class:"btn btn-danger" %></td> 
          </tr>
      <%end%>

          <tr>
            <td></td>
            <td></td>
            <td><b>Total Income: <p>&#8369;<%= sprintf('%.2f',@Total_income)%></p></b></td>
            <td><b>Total Tax: <p>&#8369;<%= sprintf('%.2f',@Total_tax)%></p></b></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>  

    <% end %> 

  </tbody>
</table>
