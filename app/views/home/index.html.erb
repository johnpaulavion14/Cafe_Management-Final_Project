<div class="home_bg py-5">
  <div class="w-50 text-center bg-secondary p-5 mx-auto rounded-4" style=" --bs-bg-opacity: .30;">
    <% if params[:user_notice]  %>
      <div class="alert alert-info">
        <%= params[:user_notice] %>
      </div>
    <% end %>
    <h1 class="text-dark" id="title_name">Cafe Management App</h1>
    <div class="row mt-3">
      <div class="col">
        <div class="w-50 mx-auto d-flex justify-content-center" style="font-weight: bold;">
          <%= button_to "Log In", shop_path, method: :get, class:"btn btn-success mx-2 text-uppercase", id:"login"%>
          <%= button_to "Register", new_user_registration_path, method: :get, class:"btn btn-danger mx-2 text-uppercase", id:"register" %>
        </div>
      </div>
    </div>
    <div class="mt-3">
      <%= image_tag "shop_house.png", height: 300 %>
    </div>
  </div>
</div>
