<div class="container text-center">
  <div class="row">

    <div class="col d-flex flex-column justify-content-center">
      <i><%="Welcome, " + current_user.email+' !'%></i>

    </div>

    <div class="col-6 d-flex">
      <nav class="navbar navbar-expand-lg bg-light w-100">
        <ul class="nav nav-pills d-flex justify-content-around w-100">
          <li class="nav-item">
              <%= link_to "All Products", products_path, class:"nav-link #{'active' if current_page?(products_path)}" %>
          </li>
          <li class="nav-item">
              <%= link_to "All Orders",  all_orders_path, class:"nav-link #{'active' if current_page?(all_orders_path)}"%>
          </li>
          <li class="nav-item">
              <%= link_to "Sold Products",sold_products_path, class:"nav-link #{'active' if current_page?(sold_products_path)}" %>
          </li>
        </ul>
      </nav>
    </div>

    <div class="col d-flex flex-column justify-content-center">
      <%= button_to "Log Out", destroy_user_session_path, method: :delete, class:"btn btn-outline-danger" %>
    </div>    
    
  </div>
</div>







