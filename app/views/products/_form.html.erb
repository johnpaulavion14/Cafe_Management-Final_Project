<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :product_name, style: "display: block; font-weight: bold;" %>
    <%= form.text_field :product_name ,required: true, class:"text-center"%>
  </div>

  <div class="mt-2">
    <%= form.label :price, style: "display: block; font-weight: bold; "%>
    <%= form.number_field :price, step: :any, required: true, class:"text-center" %>
  </div>

  <div class="mt-3 d-flex flex-column align-items-center ">
    <%= form.label :image, style: "display: block; font-weight: bold;" %>
    <%= form.file_field :image , style: "margin-left: 70px" %>
  </div>  
  </br>
  </br>
  <% if current_page?(new_product_path) %>
    <div >
      <%= form.submit "Create Product", class:"btn btn-success", id:"create_new_product" %>
    </div>  
  <% else %>
    <div >
      <%= form.submit "Update Product", class:"btn btn-success", id:"create_new_product" %>
    </div>    
  <% end %>
<% end %>
