<h2>Edit Products</h2>

<% if notice  %>
  <div class="alert alert-danger"><%= notice %></div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= sort_link(@q, :product_name, 'Name', default_order: :asc) %></th>
      <th scope="col"><%= sort_link(@q, :price, 'Price', default_order: :asc) %></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  <% @products.each_with_index do |product,idx|%>
        <tr>
          <td><%= idx + 1%> </td>
          <td class="text-capitalize"><%= product.product_name%> </td>
          <td>&#8369;<%= sprintf('%.2f',product.price)%> </td>
          <td><%= link_to "Edit", edit_product_path(product.id), class:"btn btn-warning" %></td>
          <td><%= button_to "Delete", product_path(product.id), method: :delete, class:"btn btn-danger" %></td>
        </tr>
    <%end%>
  </tbody>
</table>


</br></br>
<div>
  <%= button_to "Back to products", products_path, method: :get , class:"btn btn-primary"%>
</div>